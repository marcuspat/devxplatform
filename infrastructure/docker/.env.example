# Database Configuration
POSTGRES_DB=devxplatform
POSTGRES_USER=devx
POSTGRES_PASSWORD=devx_secure_password_change_in_production
DATABASE_URL=postgresql://devx:devx_secure_password_change_in_production@postgres:5432/devxplatform

# Redis Configuration
REDIS_PASSWORD=devx_redis_password_change_in_production
REDIS_URL=redis://:devx_redis_password_change_in_production@redis:6379

# API Configuration
NODE_ENV=development
API_PORT=3001
JWT_SECRET=devx_jwt_secret_change_in_production_with_256_bit_key
CORS_ORIGIN=http://localhost:3000

# Portal Configuration
PORTAL_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001
API_URL=http://api:3001

# Worker Configuration
WORKER_PORT=3003
WORKER_CONCURRENCY=5
QUEUE_NAME=devx-jobs

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443

# PgAdmin Configuration (Optional)
PGADMIN_DEFAULT_EMAIL=admin@devxplatform.local
PGADMIN_DEFAULT_PASSWORD=admin_password_change_in_production
PGADMIN_PORT=5050

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30s

# Security
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_CORS=true
SECURE_HEADERS=true

# Development Settings
HOT_RELOAD=true
DEBUG_MODE=false