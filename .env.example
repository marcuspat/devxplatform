# Environment Variables for DevX Platform
# Copy this file to .env and update with your actual values

# Database Configuration
DB_ADMIN_PASSWORD=your-secure-db-password-here

# Authentication
JWT_SECRET=your-jwt-secret-key-here

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password-here

# GitHub Integration
GITHUB_TOKEN=your-github-token-here

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# MCP Server Configuration (if using Claude integration)
CLAUDE_API_KEY=your-claude-api-key-here

# Production Environment Settings
NODE_ENV=production
PORT=3000

# Security Headers
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Cloud Provider Credentials (for Terraform deployments)
# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Azure
ARM_CLIENT_ID=your-azure-client-id
ARM_CLIENT_SECRET=your-azure-client-secret
ARM_SUBSCRIPTION_ID=your-azure-subscription-id
ARM_TENANT_ID=your-azure-tenant-id

# Google Cloud Platform
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json