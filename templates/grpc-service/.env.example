# Environment
NODE_ENV=development
GRPC_HOST=0.0.0.0
GRPC_PORT=50051

# Logging
LOG_LEVEL=info

# gRPC Configuration
GRPC_MAX_RECEIVE_MESSAGE_LENGTH=4194304
GRPC_MAX_SEND_MESSAGE_LENGTH=4194304
GRPC_KEEPALIVE_TIME_MS=120000
GRPC_KEEPALIVE_TIMEOUT_MS=20000
GRPC_KEEPALIVE_PERMIT_WITHOUT_CALLS=1
GRPC_MAX_CONCURRENT_STREAMS=100

# TLS Configuration (Production)
TLS_CERT_PATH=
TLS_KEY_PATH=
TLS_CA_PATH=
TLS_CHECK_CLIENT_CERTIFICATE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Database (PostgreSQL example)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DATABASE_POOL_SIZE=10

# Authentication
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=1d

# Monitoring (optional)
SENTRY_DSN=