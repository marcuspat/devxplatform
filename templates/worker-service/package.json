{
  "name": "worker-service-template",
  "version": "1.0.0",
  "description": "Production-ready worker service template with Bull/BullMQ job processing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "worker": "node dist/worker.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "validate": "npm run lint && npm run test && npm run build",
    "dashboard": "bull-board"
  },
  "dependencies": {
    "bullmq": "^4.15.0",
    "ioredis": "^5.3.2",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "cron": "^3.1.6",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "fs-extra": "^11.1.1",
    "prom-client": "^14.2.0",
    "@bull-board/express": "^5.8.4",
    "@bull-board/bullmq": "^5.8.4",
    "node-fetch": "^2.7.0",
    "http-status-codes": "^2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/uuid": "^9.0.2",
    "@types/cron": "^2.0.1",
    "@types/nodemailer": "^6.4.14",
    "@types/multer": "^1.4.8",
    "@types/fs-extra": "^11.0.4",
    "@types/node-fetch": "^2.6.9",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.6.4",
    "@types/jest": "^29.5.4",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}