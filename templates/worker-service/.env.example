# Environment
NODE_ENV=development
PORT=3000
MODE=api

# Logging
LOG_LEVEL=info

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES_PER_REQUEST=3
REDIS_RETRY_DELAY_ON_FAILURE=100

# Queue Configuration
QUEUE_DEFAULT_JOB_OPTIONS_DELAY=0
QUEUE_DEFAULT_JOB_OPTIONS_ATTEMPTS=3
QUEUE_DEFAULT_JOB_OPTIONS_BACKOFF_TYPE=exponential
QUEUE_DEFAULT_JOB_OPTIONS_BACKOFF_DELAY=2000

# Worker Configuration
WORKER_EMAIL_CONCURRENCY=5
WORKER_FILE_CONCURRENCY=2
WORKER_REPORT_CONCURRENCY=1
WORKER_CLEANUP_CONCURRENCY=1
WORKER_WEBHOOK_CONCURRENCY=10

WORKER_REMOVE_ON_COMPLETE=100
WORKER_REMOVE_ON_FAIL=50
WORKER_MAX_STALLED_COUNT=1
WORKER_STALLED_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Processing
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Email Configuration
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@example.com

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Monitoring (optional)
SENTRY_DSN=

# Database (optional)
DATABASE_URL=