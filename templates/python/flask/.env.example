# Flask Configuration
FLASK_APP=app.py
FLASK_CONFIG=development
FLASK_ENV=development

# Service Configuration
SERVICE_NAME=flask-service
SECRET_KEY=your-secret-key-here-must-be-at-least-32-characters
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/flask_db
DB_POOL_SIZE=10

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-must-be-at-least-32-characters
JWT_ACCESS_TOKEN_EXPIRES=1800  # 30 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days in seconds

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATELIMIT_DEFAULT=100 per hour

# Logging
LOG_LEVEL=INFO

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# External Services
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_TIMEOUT=30